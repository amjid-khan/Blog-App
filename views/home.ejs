<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head") -%>
    <title>Homepage</title>
    <style>
      .container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 20px;
        display: flex;
        flex-wrap: wrap;
        gap: 25px;
        justify-content: center;
      }

      .card {
        width: 280px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
      }

      .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
      }

      .card-img-top {
        width: 100%;
        height: 180px;
        object-fit: cover;
        object-position: center;
        border-bottom: 4px solid #007bff;
        transition: transform 0.3s ease;
      }

      .card:hover .card-img-top {
        transform: scale(1.05);
      }

      .card-body {
        padding: 20px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }

      .card-title {
        font-size: 1.25rem;
        margin: 0 0 15px;
        color: #333;
        font-weight: 700;
        user-select: none;
      }

      .btn {
        background-color: #007bff;
        color: white;
        padding: 10px 18px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        text-align: center;
        transition: background-color 0.3s ease;
        align-self: flex-start;
        border: none;
        cursor: pointer;
      }

      .btn:hover {
        background-color: #0056b3;
      }

      /* Responsive */
      @media (max-width: 768px) {
        .card {
          width: 100%;
          max-width: 400px;
        }
      }

      @media (max-width: 480px) {
        .container {
          padding: 0 10px;
          gap: 15px;
        }
      }
    </style>
  </head>
  <body>
    <%- include("partials/nav") -%>

    <div class="container">
      <% blogs.forEach(blog => { %>
      <div class="card">
        <img
          src="<%= blog.coverImageURL %>"
          class="card-img-top"
          alt="Blog Image"
        />
        <div class="card-body">
          <h5 class="card-title"><%= blog.title %></h5>
          <a href="/blog/<%= blog._id %>" class="btn">View</a>
        </div>
      </div>
      <% }) %>
    </div>

    <%- include("partials/script") -%>
  </body>
</html>
